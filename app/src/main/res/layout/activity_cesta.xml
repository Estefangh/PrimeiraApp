<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CestaActivity">

    <TextView
        android:id="@+id/tvNomeVendedorCesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome vendedor"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="476dp" />

    <TextView
        android:id="@+id/tvTotalCesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="Valor da compra"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvNomeClienteCesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome comprador"
        tools:layout_editor_absoluteX="258dp"
        tools:layout_editor_absoluteY="32dp" />

    <ListView
        android:id="@+id/lvListaCesta"
        android:layout_width="385dp"
        android:layout_height="402dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="58dp">

    </ListView>
</android.support.constraint.ConstraintLayout>